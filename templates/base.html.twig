<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{% block title %}{% trans %}navbar.title{% endtrans %}{% endblock %}</title>
    {% block stylesheets %}
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="{{ asset("assets/css/bootstrap.css") }}">
        <link rel="stylesheet" href="{{ asset('styles.css') }}">

        <link rel="stylesheet" href="{{ asset("assets/css/fa-all.css") }}">

        <link rel="stylesheet" href="{{ asset('bootstrap-toc.min.css') }}" />
    {% endblock %}

    {% block head_javascripts %}

    {% endblock %}
</head>
<body data-spy="scroll" data-target="#toc">
{% block body %}

    <header>
        {% include "_navbar.html.twig" %}
        {% include "_flash.html.twig" %}
    </header>

    <main>
        {% block main %}
        <div class="container" style="margin-top: 80px;">
            {% block content %}

            {% endblock %}
        </div>
        {% endblock %}
    </main>

    {% include "_footer.html.twig" %}

{% endblock %}
{% block javascripts %}
    <script src="{{ asset("assets/js/jquery.slim.js") }}"></script>
    <script src="{{ asset("assets/js/bootstrap.js") }}"></script>

    <script src="{{ asset('bootstrap-toc.min.js') }}"></script>

    <script>
        $('.toast').toast('show');
    </script>
{% endblock %}
</body>
</html>
