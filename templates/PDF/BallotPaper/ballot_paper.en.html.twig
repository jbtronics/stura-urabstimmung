{% extends "PDF/base.html.twig" %}

{% block title %}Ballot paper for {{ registration.fullName }}{% endblock %}

{% block styles %}
    {% include "PDF/BallotPaper/_styles.css.twig" %}
{% endblock %}

{% block body %}

    <div class="page-third1">
        <p style="line-height: 1.0; font-weight: normal;">
            <span style="font-size: 13pt; color: #848484;">Ballot 2021</span><br>
            <b style="font-size: 24pt;">BALLOT PAPER</b><br>
            <i style="font-size: 13pt;">for {{ registration.fullName }}</i>
        </p>

        <div class="address-field">
            <div class="return-address-zone">
                Studierendenrat der FSU Jena · Carl-Zeiss-Straße 3 · 07743 Jena
            </div>
            <div class="comment-zone"></div>
            <div class="address-zone">
                {{ registration.address.formatMultiline(registration.fullName) | nl2br }}
            </div>
        </div>



        <div style="position: absolute; left: 130mm; top: 10mm;">
            <img style="height: 15mm;" src="data:image/png;base64,">
        </div>

        <div style="position: absolute; left: 130mm; top: 10mm; right: 10mm; line-height: 1.0; padding: 1mm 1mm; text-align: right; font-size: 9.5pt;">
            <p style="margin-top: 0;">
                <b>Contact the ballot committee</b>
                urabstimmung@stura.uni-jena.de<br>
                03641 94 30 95
            </p>
        </div>

        <div class="border" style="position: absolute; left: 130mm; top: 45mm; right: 10mm; line-height: 1.0; padding: 1mm 1mm; text-align: center; font-size: 11pt;">
            <p style="font-weight: bold; margin-top: 0;">A brief explanation of how to vote by mail can be found on the ballot envelope.</p>
            <p style="margin-top: 0; margin-bottom: 0; font-size: 9pt;">We are happy to provide further information online at<br><b>www.urabstimmung.stura.uni-jena.de</b></p>
        </div>

        <div style="position: absolute; top: 90mm; left: 10mm; right: 10mm; text-align: center; font-weight: bold; font-size: 14pt;">
            <span>
            The declaration below must be signed and returned!
            </span>
        </div>
    </div>

    <div class="fold-mark"></div>

    <div class="page-third2">
        <div class="container">
            <div style="width: 150mm;">
                <b style="font-size: 18pt; ">DECLARATION</b><br>
                <i>For valid voting, it is essential to enter the current date and to sign this declaration independently.</i>
            </div>

            <div style="position: absolute; margin-top: 6mm; left: 22mm; right: 20mm;">
                <p style="text-align: justify;">
                    I hereby certify that I have filled in the ballot paper personally and secretly and have placed it in the ballot paper envelope.
                    I have then sealed this envelope independently.
                </p>
                <div class="signature-area" style="margin-top: 30mm;">
                    <span style="display: inline;">{{ registration.address.city }}, the </span>
                    <div style="border-top: solid 0.2mm black; margin-left: 80mm;">{{ registration.fullName }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="fold-mark2"></div>

    <div class="page-third3">
        <div style="position: absolute; top: 10mm; left: 10mm; right: 10mm; text-align: center; font-weight: bold; font-size: 14pt;">
            <p>
                Voting by mail is possible until May 7, 2021!
            </p>
        </div>

        <div style="padding-top: 0; position: absolute; left: 22mm; right: 15mm; top: 20mm; height: 50mm;">
            <p class="hint-text" style="text-align: left; font-size: 12pt;">
                <b>FOR THE ORIGINAL VOTING COMMITTEE</b><br>
                <i style="font-size: 10pt;">Serves to verify the authenticity of this ballot paper</i>
            </p>
            <table class="border" style="width: 100%;">
                <tr>
                    <td style="width: 35mm;">
                        <img class="" src="{{ qrCode }}" style="height: 35mm; display: block;">
                    </td>
                    <td style="font-weight: bold;">
                        <table>
                            <tr>
                                <td><span class="hint-text">Name</span></td>
                                <td>{{ registration.fullName }}</td>
                            </tr>
                            <tr>
                                <td><span class="hint-text">Student Nr.</span></td>
                                <td>{{ registration.studentNumber }}</td>
                            </tr>
                            <tr>
                                <td><span class="hint-text">E-Mail</span></td>
                                <td>{{ registration.email }}</td>
                            </tr>
                            <tr>
                                <td><span class="hint-text" style="line-height: 0.9;">Passphrase</span></td>
                                <td>{{ registration.secret }}</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <footer class="footer-line">
        <span>Generated on {{ 'now' | format_datetime }} ({{ registration.id }})</span>
    </footer>
{% endblock %}